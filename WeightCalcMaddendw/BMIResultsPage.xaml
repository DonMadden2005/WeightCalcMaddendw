<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeightCalcMaddendw.BMIResultPage"
             Title="BMI Result">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Your BMI is:" FontSize="20" HorizontalOptions="Center"/>

        <Label x:Name="BmiValueLabel"
               FontSize="30"
               HorizontalOptions="Center"
               TextColor="Blue"/>

        <Label x:Name="CategoryLabel"
               FontSize="22"
               HorizontalOptions="Center"/>

        <Button Text="View Recommendations"
                Clicked="OnRecommendationsClicked"/>

        <Button Text="Back to Input"
                Clicked="OnBackClicked"/>

    </VerticalStackLayout>
</ContentPage>