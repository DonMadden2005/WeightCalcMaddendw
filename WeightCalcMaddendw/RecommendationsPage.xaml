<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeightCalcMaddendw.RecommendationsPage"
             Title="Health Recommendations">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Personalized Recommendations"
                   FontSize="22"
                   HorizontalOptions="Center"/>

            <Label x:Name="RecommendationLabel"
                   FontSize="18"/>

            <Button Text="Back to Results"
                    Clicked="OnBackToResultsClicked"/>

            <Button Text="Back to Input"
                    Clicked="OnBackToInputClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>